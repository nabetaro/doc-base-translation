#!/bin/sh
# $Id: preinst 215 2011-02-20 19:23:22Z robert $
# vim:ts=4:sts=4:et:sw
# preinst for doc-base

# Abort if any command returns an error value
set -e

package=doc-base
infodir="/var/lib/$package/info"
docsdir="/var/lib/$package/documents"
omfdir="/var/lib/$package/omf"
compatver=0.9.6~


remove_obsolete() {
    rm -rf /var/lib/doc-base
}


if [ "$1" = "upgrade" ] &&  dpkg --compare-versions "$2" lt-nl "$compat_ver"; then
    remove_obsolete
fi


#DEBHELPER#

exit 0

